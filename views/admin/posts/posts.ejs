<div class="admin-title">
    <h2>Posts</h2>
    <a href="/admin/add-post" class="btn btn-warning"> + Add New</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col">Post Title</th>
        <th scope="col">Author</th>
        <th scope="col">Category</th>
        <th scope="col">Created At</th>
        <th scope="col">Last Updated</th>
        <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(post => { %>
                <tr>
                        <th scope="row"><%= (users.indexOf(post)) + 1  %></th>
                        <td><%= post.title %></td>
                        <td><%= post.author.name%> </td>
                        <td >
                            <span class="badge text-bg-danger">
                                <%= post.category.title%>
                            </span>
                        </td>
                        <td><%=(post.createdAt).toLocaleString()%></td>
                        <td><%=(post.updatedAt).toLocaleString()%></td>
                        <td>
                            <div style="display: flex; justify-content: space-around;">
                                <a href="/admin/edit-post/<%= post._id  %>" class="btn btn-primary bi bi-pencil-square row"></a>
                                <form action="/admin/delete-post/<%= post._id  %>?_method=DELETE" method="POST">
                                    <button type="submit" value="Delete" class="btn btn-primary bi bi-trash">
                                    </button>
                                </form>
                            </div>
                        </td>
                </tr>
<% }) %>
    <tbody>
</table>

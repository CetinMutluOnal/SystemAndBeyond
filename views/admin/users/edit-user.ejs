<a href="/admin/users">&larr; Back</a>
<div class="admin-title">
  <h2>View / Edit user</h2>

  <form action="/admin/delete-user/<%= user._id %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete" class="btn-delete btn btn-outline-danger">
  </form>

</div>

<form action="/admin/edit-user/<%= user._id %>?_method=PUT" method="POST">

  <label for="name"><b>Name</b></label>
  <input type="text" placeholder="User Name" name="name" value="<%= user.name %>">

  <label for="email"><b>E-Mail</b></label>
  <input type="text" placeholder="Email" name="email" value="<%= user.email %>">

  <input type="submit" value="Update" class="btn btn-outline-primary">

</form>
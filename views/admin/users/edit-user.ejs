<div class="admin-title">
  <h2>View / Edit user</h2>

  <form action="/admin/delete-user/<%= user._id %>?_method=DELETE" method="POST" class="form-group">
    <button type="submit" value="Delete" class="btn-delete btn btn-outline-danger">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">

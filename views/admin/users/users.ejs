<div class="admin-title">
    <h2>Users</h2>
</div>
        <table class="table table-striped">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">E-Mail</th>
                <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                        <tr>
                                <th scope="row"><%= (users.indexOf(user)) + 1  %></th>
                                <td><%= (user.name.trim().split(' ')).slice(0,-1).join(' ')  %></td>
                                <td><%= (user.name.trim().split(' ')).pop()%></td>
                                <td><%=user.email%></td>
                                <td>
                                    <div style="display: flex; justify-content: space-around;">
                                        <a href="/admin/edit-user/<%= user._id  %>" class="btn btn-primary bi bi-pencil-square row"></a>
                                        <form action="/admin/users/<%= user._id  %>?_method=DELETE" method="POST">
                                            <button type="submit" value="Delete" class="btn btn-primary bi bi-trash">
                                            </button>
                                        </form>
                                    </div>
                                </td>
                        </tr>
        <% }) %>
            <tbody>
        </table>
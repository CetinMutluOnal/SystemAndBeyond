<div class="admin-title">
    <h2>Categories</h2>
    <a href="/admin/add-category" class="btn btn-warning"> + Add New</a>
</div>
    <ul class="admin-posts">
        <% categories.forEach(category => { %>
         <li>
            <a href="/admin/category/<%= category._id %>">
                <%= category.title %> &nearr;
            </a>
            <div class="admin-post-controls">
                <a href="/admin/edit-category/<%= category._id  %>" class="btn">Edit</a>

                <form action="/admin/delete-category/<%= category._id  %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn">
                </form>
            </div>
         </li>
        <% }) %>
    </ul>
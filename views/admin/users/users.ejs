<div class="admin-title">
    <h2>Users</h2>
</div>
    <ul class="admin-posts">
        <% users.forEach(user => { %>
         <li>
            <a href="/user/<%= user._id %>">
                <%= user.name %> &nearr;
            </a>
            <div class="admin-post-controls">
                <a href="/admin/edit-user/<%= user._id  %>" class="btn">Edit</a>

                <form action="/admin/delete-user/<%= user._id  %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn">
                </form>
            </div>
         </li>
        <% }) %>
    </ul>